@page "/"

@using static Constants

@namespace VirtualReceptionist

<div class="headerWrapper">
    <Header HotelName="Sahara resort" />
</div>

<div class="pageWrapper">
    <div class="loginPageWrapper">
        <div class="loginBackgroundImageContainer">
            <img class="loginBackgroundImage" src="./images/background.png" alt="background image"/>
        </div>

        <div class="loginPageContainer">
            <div class="userTypeButton">
                <UserTypeButton BackColor="@Lavender"
                                Type="UserType.Visitor"
                                Image="./images/male1.png"
                                OnClick="@(() => Visitor_OnClick())"/>
            </div>
            <div class="userTypeButton">
                <UserTypeButton BackColor="@Gray"
                                Type="UserType.Customer"
                                Image="./images/female1.png"
                                OnClick="@(() => GlobalData.UserType = UserType.Customer)"/>
            </div>
            <div class="userTypeButton">
                <UserTypeButton BackColor="@Blue"
                                Type="UserType.Staff"
                                Image="./images/male2.png"
                                OnClick="@(() => GlobalData.UserType  = UserType.Staff)"/>
            </div>
        </div>
    </div>
</div>

<style>

    .loginPageWrapper{
        position:relative;
        display:grid;
        grid-template-rows:100%;
        grid-template-columns:100%;
        height: calc(100vh - 4rem);
        width:100vw;
        background-color: #@White;
    }

    .loginBackgroundImageContainer{
        grid-row-start:1;
        grid-column-start:1;
        width:100%;
        height:100%;
        position:relative;
    }

    .loginBackgroundImage{
        height: calc(100vh - 4rem);
        width:100vw;
        object-fit:cover;
    }

    .loginPageContainer {
        grid-row-start: 1;
        grid-column-start: 1;
        width: 100%;
        height: 100%;
        position: relative;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 4rem;
    }

      .userTypeButton {
        position: relative;
        width: 400px;
        height: 400px;
    }

</style>