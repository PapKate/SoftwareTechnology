@inherits LayoutComponentBase

<div class="page">
    <div class="main">
        @Body
    </div>
</div>

<style>

    .headerWrapper {
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 5;
    }

    .pageWrapper {
        min-height: calc(100vh - 4rem);
        position: relative;
        top: 4em;
        justify-content: center;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .userPageWrapper {
        position: relative;
        width: 100%;
        height: calc(100vh - 4em);
        display: grid;
        grid-auto-columns: 250px 1fr;
        overflow-y:auto;
    }

    .userPageContent {
        position: relative;
        width: 100%;
        height: 100%;
        grid-column-start: 2;
    }

    ::-webkit-scrollbar {
        width: 4px;
        height: 4px;
    }

    ::-webkit-scrollbar-button {
        width: 0px;
        height: 0px;
    }

    ::-webkit-scrollbar-corner {
        background: transparent;
    }

    ::-webkit-scrollbar-thumb {
        background: #@Constants.Lavender;
        border: 0px none;
        border-radius: 0px;
    }

    ::-webkit-scrollbar-track {
        background: #@Constants.PalePurple;
        border: 0px none;
        border-radius: 50px;
    }


</style>