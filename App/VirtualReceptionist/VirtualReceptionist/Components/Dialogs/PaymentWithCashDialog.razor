
@using static VirtualReceptionist.Constants

@namespace VirtualReceptionist

<div>
    <div style="height: 40px; width: 200px; margin: 1em 0;">
        <TextInput @ref="mAmountTextInput"
                Hint="Received Amount"
                ShowHint="true"
                LineColor="@Lavender"
                HasLine="true"
                FocusColor="@Blue" 
                ForeColor="@Gray"
                InputFormatter="InputFormatters.DoubleFormatter"
                TypingFinished="@((e) => CalculateChange(e))"/>
    </div>
    <div style="height: auto; width: 200px; margin: 1em 0; font-family: Calibri,sans-serif; color: #@Gray;">
        <span> 
        The change:
        <br />
        @mChange.ToLocalizedCurrency()
    </span>
    </div>
    
</div>

