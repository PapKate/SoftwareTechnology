@using static Constants

@namespace VirtualReceptionist

<div class="headerBar">
    <div class="headerApp">
        <img class="headerLogoImage" src="./images/logo.png" alt="app logo">
        <div class="headerAppName">VirtualReceptionist</div>
    </div>
    <h1 class="headerHotelName">@HotelName</h1>
</div>


<style>

    .headerBar
    {
        position:fixed;
        top:0;
        width:100%;
        height: 4rem;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        background-color: #@Blue;
        box-shadow: @Atom.Blazor.Personalization.BoxShadow;
    }

    .headerApp
    {
        position:relative;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
    }

    .headerLogoImage
    {
        position:relative;
        border: none;
        outline: none;
        background: none;
        width: 3rem;
        height: 3rem;
        display: inline-block;
        margin-left: 1.5rem;
        padding: 0;
        overflow:hidden;
    }

    .headerAppName {
        position:relative;
        font-family: Calibri, sans-serif;
        margin-left: 4px;
        font-size: 150%;
        color: #@White;
        cursor: default;
    }

    .headerHotelName {
        position:absolute;
        width:100%;
        text-align: center;
        font-family: Calibri, sans-serif;
        margin: 0;
        font-weight:600;
        font-size: 200%;
        color: #@White;
        cursor: default;
    }

</style>